<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MusicApp" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/background_color</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="IconTintColor">
        <item name="android:tint">@color/purple_200</item>
    </style>

    <style name="TextColorOnSurface">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MaterialButtonBackground">
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="MaterialCard" parent="Widget.Material3.CardView.Filled">
        <item name="cardElevation">5dp</item>
        <item name="cardBackgroundColor">#2B2930</item>
        <item name="cardCornerRadius">15dp</item>
        <item name="strokeColor">@color/purple_200</item>
    </style>

    <style name="MaterialCardPlayer" parent="Widget.Material3.CardView.Filled">
        <item name="cardElevation">0dp</item>
        <item name="cardBackgroundColor">#2B2930</item>
        <item name="cardCornerRadius">15dp</item>
    </style>

    <style name="BottomColor">
        <item name="android:background">@color/bottom_color_dark</item>
    </style>

    <style name="IconCheckFavorite">
        <item name="android:tint">@color/red_200</item>
    </style>

    <style name="MainButtonPlayer">
        <item name="android:tint">@color/background_color_white</item>
    </style>
</resources>